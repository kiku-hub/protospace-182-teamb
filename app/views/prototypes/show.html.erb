<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <!-- プロトタイプのタイトルと投稿者情報 -->
      <p class="prototype__hedding"><%= "プロトタイプのタイトル" %></p>
      <%= link_to "by プロトタイプの投稿者", root_path, class: :prototype__user %>

      <!-- プロトタイプの操作（編集・削除） -->
      <% if @prototype && user_signed_in? && current_user.id == @prototype.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", root_path, class: :prototype__btn %>
          <%= link_to "削除する", root_path, class: :prototype__btn %>
        </div>
      <% end %>

     <!-- プロトタイプの画像 -->
   <div class="prototype__image">
   <% if @prototype %>
  <%= image_tag url_for(@prototype.image) if @prototype.image.attached? %>
    <% else %>
    <p>画像が登録されていません。</p>
      <% end %>
      </div>




    <!-- プロトタイプの詳細情報 -->
  <div class="prototype__body">
   <div class="prototype__detail">
    <p class="detail__title">キャッチコピー</p>
    <p class="detail__message">
      <%= @prototype.catch_copy %>
    </p>
    </div>
    <div class="prototype__detail">
     <p class="detail__title">コンセプト</p>
     <p class="detail__message">
      <%= @prototype.concept %>
     </p>
    </div>
  </div>

      <!-- プロトタイプのコメント -->
      <div class="prototype__comments">
        <%# ログインしているユーザーにはコメント投稿フォームを表示する %>
        <%# <%= form_with model: モデル名, local: true do |f| %>
          <div class="field">
            <%# <%= f.label :hoge, "コメント" %><br />
            <%# <%= f.text_field :hoge, id: "comment_content" %>
          </div>
          <div class="actions">
            <%# <%= f.submit "送信する", class: :form__btn %> 
          </div>
        <%# <% end %> 

        <!-- 投稿に紐づくコメントを一覧する処理 -->
        <ul class="comments_lists">
          <%# コメントの一覧処理を記述 %>
          <li class="comments_list">
            <%# <%= " コメントのテキスト " %>
            <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %> %>
          </li>
        </ul>
      </div>

    <!-- プロトタイプの一覧を追加する部分 -->
<h1><%= @user.name %>さんのプロトタイプ一覧</h1>
<% @prototypes.each do |prototype| %>
  <div class="prototype">
    <h2><%= link_to prototype.title, prototype_path(prototype) %></h2>
    <p class="user-profile">
      <span class="occupation"><%= @user.occupation %></span> /
      <span class="position"><%= @user.position %></span>
    </p>
    <p class="prototype-concept"><%= prototype.concept %></p>
  </div>
<% end %>



